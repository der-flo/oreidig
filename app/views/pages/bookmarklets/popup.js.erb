(function(){
  f = '<%= save_bookmark_url %>' +
                '?url='    + encodeURIComponent(window.location.href) +
                '&title=' + encodeURIComponent(document.title) +
                '&notes=' + encodeURIComponent(''+
                              (window.getSelection ? 
                                window.getSelection():
                                document.getSelection ? 
                                  document.getSelection():
                                  document.selection.createRange().text)
                            );
      
      
  a=function(){
    if(!window.open(f,'oreidig',
                    'location=no,links=no,scrollbars=no,toolbar=no,width=550,height=550'))
      location.href=f
  };
  if(/Firefox/.test(navigator.userAgent)) {
    setTimeout(a,0)
  } else {
    a()
  }
}
)()
